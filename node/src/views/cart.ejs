<!doctype html>
<html lang="en">

<!-- Head -->
<head>
    <!-- Page Meta Tags-->
    <meta charset="utf-8">
    <meta http-equiv="x-ua-compatible" content="ie=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="">
    <meta name="author" content="">
    <meta name="keywords" content="">

    <!-- Favicon -->
    <link rel="apple-touch-icon" sizes="180x180" href="/favicon/apple-touch-icon.png">
    <link rel="icon" type="image/png" sizes="32x32" href="/favicon/favicon-32x32.png">
    <link rel="icon" type="image/png" sizes="16x16" href="/favicon/favicon-16x16.png">
    <link rel="mask-icon" href="/favicon/safari-pinned-tab.svg" color="#5bbad5">
    <meta name="msapplication-TileColor" content="#da532c">
    <meta name="theme-color" content="#ffffff">

    <!-- Vendor CSS -->
    <link rel="stylesheet" href="/stylesheets/libs.bundle.css"/>

    <!-- Main CSS -->
    <link rel="stylesheet" href="/stylesheets/theme.bundle.css"/>

    <!-- Google Fonts-->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Barlow:wght@300;400;500;600;700&display=swap" rel="stylesheet">

    <!-- Fix for custom scrollbar if JS is disabled-->
    <noscript>
        <style>
            /**
            * Reinstate scrolling for non-JS clients
            */
            .simplebar-content-wrapper {
                overflow: auto;
            }
        </style>
    </noscript>

    <!-- Page Title -->
    <title>Alpine | Bootstrap 5 Ecommerce HTML Template</title>

</head>
<body class="">

<% if (typeof (userSession.authorization) === 'undefined' || !userSession.authorization) { %>
    <%- include('components/header-main.ejs') %>
<% } else { %>
    <%- include('components/header.ejs') %>
<% } %>

<!-- Main Section-->
<section class="mt-5 container ">
    <!-- Page Content Goes Here -->

    <h1 class="mb-6 display-5 fw-bold text-center">장바구니</h1>

    <div class="row g-4 g-md-8">
        <!-- Cart Items -->
        <div class="col-12 col-lg-6 col-xl-7">
            <div class="table-responsive">
                <table class="table">
                    <thead>
                    <tr>
                        <th class="d-none d-sm-table-cell"></th>
                        <th class="ps-sm-3">주문 상세</th>
                        <th></th>
                    </tr>
                    </thead>
                    <tbody>
                    <!-- product -->
                    <% if (cartData !== "error") { %>
                        <% cartData.forEach( (item) => { %>
                            <tr>
                                <!-- image -->
                                <td class="d-none d-sm-table-cell">
                                    <picture class="d-block bg-light p-3 f-w-20">
                                        <img class="img-fluid" src="/images/products/<%= item.CartProductImage %>" alt="">
                                    </picture>
                                </td>
                                <!-- image -->

                                <!-- Details -->
                                <td>
                                    <div class="ps-sm-3">
                                        <h6 class="mb-2 fw-bolder">
                                            <%= item.CartProductName %>
                                        </h6>
                                    </div>
                                </td>
                                <!-- Details -->

                                <!-- Actions -->
                                <td class="f-h-0">
                                    <div class="d-flex justify-content-between flex-column align-items-end h-100">
                                        <p class="fw-bolder mt-3 m-sm-0"><%= item.CartProductCost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %></p>
                                    </div>
                                </td>
                                <!-- /Actions -->
                            </tr>
                        <% }) %>
                    <% } %>
                    <!-- /product -->
                    </tbody>
                </table>
            </div>
        </div>
        <!-- /Cart Items -->
        <div class="col-12 col-lg-6 col-xl-5">
            <div class="bg-dark p-4 p-md-5 text-white">
                <h3 class="fs-3 fw-bold m-0 text-center">주문 정보</h3>
                <div class="py-3 border-bottom-white-opacity">
                    <div class="d-flex justify-content-between align-items-center flex-column flex-sm-row">
                        <div>
                            <p class="m-0 fs-5 fw-bold">총 금액</p>
                        </div>
                        <p class="mt-3 m-sm-0 fs-5 fw-bold"><%= totalCost.toString().replace(/\B(?=(\d{3})+(?!\d))/g, ','); %></p>
                    </div>
                </div>

                <!-- Coupon Code-->
                <button class="btn btn-link p-0 mt-2 text-white fw-bolder text-decoration-none" type="button"
                        data-bs-toggle="collapse" data-bs-target="#collapseExample" aria-expanded="false"
                        aria-controls="collapseExample">
                    Have a coupon code?
                </button>
                <div class="collapse" id="collapseExample">
                    <div class="card card-body bg-transparent p-0">
                        <div class="input-group mb-0 mt-2">
                            <input type="text" class="form-control border-0" placeholder="Enter coupon code">
                            <button
                                    class="btn btn-white text-dark px-3 btn-sm border-0 d-flex justify-content-center align-items-center"><i
                                        class="ri-checkbox-circle-line ri-lg"></i></button>
                        </div>
                    </div>
                </div>
                <!-- / Coupon Code-->

                <!-- Checkout Button-->
                <form action="/mypage/buy" method="post">
                    <button type="submit" class="btn btn-white w-100 text-center mt-3"><i class="ri-secure-payment-line align-bottom"></i> 주문하기</button>
                </form>
                <!-- Checkout Button-->
            </div>

        </div>
        <!-- Cart Summary -->

        <!-- /Cart Summary -->
    </div>

    <!-- /Page Content -->
</section>
<!-- / Main Section-->

<!-- Footer -->
<%- include('components/footer.ejs') %>

<!-- Theme JS -->
<!-- Vendor JS -->
<script src="/javascripts/vendor.bundle.js"></script>

<!-- Theme JS -->
<script src="/javascripts/theme.bundle.js"></script>
</body>

</html>